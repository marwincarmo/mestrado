@article{chen2020,
  title = {Consequences of Ignoring the Response-Shift and Measure Non-Invariant Items in Sleep Studies: An Empirical Data Based Simulation of the Treatment Effect of {{CBT}}-{{I}} on Dysfunctional Sleep Beliefs},
  shorttitle = {Consequences of Ignoring the Response-Shift and Measure Non-Invariant Items in Sleep Studies},
