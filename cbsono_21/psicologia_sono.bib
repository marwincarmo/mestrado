  author = {Harvey, Allison G. and Bélanger, Lynda and Talbot, Lisa and Eidelman, Polina and Beaulieu-Bonneau, Simon and Fortier-Brochu, Émilie and Ivers, Hans and Lamy, Manon and Hein, Kerrie and Soehner, Adriane M. and Mérette, Chantal and Morin, Charles M.},
